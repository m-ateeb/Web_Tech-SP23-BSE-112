<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <title>Create New Category</title>
</head>
<body>
    <div class="container mt-5">
        <h3 class="mb-4">Category Form</h3>
        <form id="submit" action="" method="post" style="display: flex; flex-direction: column;">
            
            <div class="mb-3 form-group">
                <label for="titleInput" class="form-label">Enter title of the Category</label>
                <input name="title" type="text" class="form-control" id="username" placeholder="Enter title">
                <span id="error-message-username" class="text-danger" style="display: none;">Required Field</span>
            </div>

            
            <div class="mb-3 form-group">
                <label for="city" class="form-label">Enter description of the Category</label>
                <textarea name="description" class="form-control" id="city" placeholder="Enter description"></textarea>
                <span id="error-message-city" class="text-danger" style="display: none;">Required Field</span>
            </div>

            <div class="mt-3 form-group">
                <button type="submit" class="btn btn-primary" id="button">Create</button>
            </div>
        </form>
    </div>
</body>
</html>

