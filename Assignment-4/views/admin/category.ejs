<h3><%-pageTitle  %></h3>

<a href="/admin/createcategory" class="btn btn-info">Create New Category</a>
<table class="table">
    <thead>
        <tr>
            <th>id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% for( let index = 0; index < category.length; index++ ) { %>
            <tr>
                <td><%= category[index]._id %></td>
                <td><%= category[index].title %></td>
                <td><%= category[index].description %></td>
                <td>
                    <a href="/admin/editcategory/<%=category[index]._id%>" class="btn btn-warning">Edit</a>
                    <a href="/admin/deletecategory/<%=category[index]._id%>" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        <% } %>
    </tbody>
</table>