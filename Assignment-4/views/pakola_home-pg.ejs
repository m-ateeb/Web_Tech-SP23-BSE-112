      }

      @keyframes slide {
        from {
          transform: translateX(0);
        }
        to {
          transform: translateX(-100%);
        }
      }

      .logos {
        overflow: hidden;
        padding: 90px 0;
        background: white;
        white-space: nowrap;
        position: relative;
      }

      .logos-slide {
        padding-top: 40px;
        display: flex;
        flex-direction: row;
        animation: 35s slide linear;
      }
      /* Styling for the search bar in the navbar */
      nav ul {
        list-style: none;
        display: flex;
        align-items: center;
      }

      .search-icon {
        position: relative;
        display: flex;
        align-items: center;
        color: #fff;
        padding: 10px;
        text-decoration: none;
      }

      .search-form {
        display: none;
        position: initial;
        top: 30px;
        left: 0;
        background-color: white;
        border: 1px solid #ddd;
        padding: 5px;
        width: 200px;
      }

      .search-form input {
        border: none;
        padding: 5px;
        width: 80%;
      }

      .search-form button {
        background-color: #4caf50;
        color: white;
        border: none;
        padding: 5px;
        cursor: pointer;
      }

      /* Show the search form when search icon is clicked */
      .search-icon:hover + .search-form,
      .search-form:hover {
        display: block;
      }
    </style>
